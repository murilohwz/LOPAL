programa {
  funcao inicio() {
    inteiro base
    inteiro altura
    inteiro area

    escreva("Informe em cm o tamanho da base do triangulo: ")
    leia(base)
    limpa()

    escreva("Informe em cm a altura do triangulo: ")
    leia(altura)
    limpa()

    area = base * altura

    escreva("A area do triangulo é: " ,area)

    
  }
}
